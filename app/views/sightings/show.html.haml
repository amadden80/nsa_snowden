/ Link to show that you can use remote_true links to do pretty much anything
= link_to 'Whatever', whatever_sightings_path, remote: true

%h1
  Sighting No. #{@sighting.id}

= @sighting.image
= image_tag @sighting.image
= image_tag @sighting.image.large
= image_tag @sighting.image.medium
= image_tag @sighting.image.thumb

#map-canvas

:javascript
  snowden_map.display_map(#{@sighting.latitude}, #{@sighting.longitude})

  snowden_map.add_marker(#{@sighting.latitude}, #{@sighting.longitude}, "#{@sighting.location}")